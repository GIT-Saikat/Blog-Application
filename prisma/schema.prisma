generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id            String          @id           @default(uuid())
  username      String          @unique
  email         String          @unique
  password      String
  created_at    DateTime        @default(now())
  updated_at    DateTime        @updatedAt

  posts         Post[]
  comments      Comment[]
}

model Post{
  id            String          @id           @default(uuid())
  title         String
  content       String
  created_at    DateTime        @default(now())
  updated_at    DateTime        @updatedAt

  author_id     String
  author        User            @relation(fields: [author_id],references: [id])
  comments      Comment[]
}

model Comment{
  id            String          @id           @default(uuid())
  content       String
  created_at    DateTime        @default(now())
  updated_at    DateTime        @updatedAt

  author_id     String
  athor         User            @relation(fields: [author_id],references: [id])
  post_id       String
  post          Post            @relation(fields: [post_id],references: [id])
}
